extends layout

block content

  div(class="plant-detail-box")

    h1(class="sub-title")= title
    a(href=plant.category.url class="link")= plant.category.name

    if plant.image
      img(src=`/images/${plant.image}`)
    else
      img(src='/images/stock-plant.jpg')
              
    p(class="plant-description")= plant.description

    p(class="plant-stock") $#{plant.price} (#{plant.stock} left!)

    if delete_plant === undefined
      div(class="button-box")
        a(href=plant.url+"/update" class="update-link") Edit Plant
        a(href=plant.url+"/delete" class="delete-link") Delete Plant
        button#addItem Add To Cart
    else
      form(action="" method="POST")
        label(for="delete") Delete #{plant.name}?
        a(href=plant.url) No I Need This Plant!
        button(type="submit") Really Delete?


