extends layout

block content
  div.container.mt-3
    h1.sub-heading.text-left All Plants
    div.plant-collection
      each plant in plant_list
        div.plant-box
          a(href=plant.url)
            if plant.image
              img(src=`/images/${plant.image}`)
            else
              img(src='/images/stock-plant.jpg')
          h2.plant-name.mt-3= plant.name
